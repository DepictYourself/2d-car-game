<Window x:Class="TrafficRush.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficRush"
        mc:Ignorable="d"
        Title="Game Over" Height="200" Width="300"
        Left="400">
    <Grid>
        <Label Content="{Binding Path=Message}" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top"/>
        <Button Click="NewGameClick" Content="New Game" HorizontalAlignment="Left" Margin="99,119,0,0" VerticalAlignment="Top" Width="98" FontSize="16"/>
        <Label Content="Score:" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="{Binding Path=NewScore}" HorizontalAlignment="Left" Margin="68,58,0,0" VerticalAlignment="Top" Width="218" FontSize="16"/>

    </Grid>
</Window>
